{
  "compilerOptions": {
    /* ðŸ”¹ DiretÃ³rios de entrada e saÃ­da */
    "rootDir": "src",
    "outDir": "dist",

    /* ðŸ”¹ Ambiente e formato de mÃ³dulo */
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    /* ðŸ”¹ Tipagem */
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* ðŸ”¹ Regras de qualidade */
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,

    /* ðŸ”¹ Mapas para debug */
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
